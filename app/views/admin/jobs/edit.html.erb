<div class="col-md-10 col-centered">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="name text-center">
      <img src="http://ww3.sinaimg.cn/large/006tNc79ly1ff1clibr6bj308d08cwfw.jpg" height="30" width="30"> 编辑职位
      </h3>
    </div>
    <div class="panel-body">

        <%= simple_form_for [:admin, @job ] do |f| %>

          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :wage_lower_bound, :label => "薪资下限" %>
          <%= f.input :wage_upper_bound, :label => "薪资上限" %>
          <%= f.input :contact_email %>
          <%= f.input :is_hidden %>

          <%= f.submit "submit" %>

        <% end %>
      </div>
    </div>
  </div>
