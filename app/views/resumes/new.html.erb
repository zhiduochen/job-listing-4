<div class="col-md-10 col-centered">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="name"> 投交履历到 <%= @job.title %> </h3>
      <hr>
    </div>
    <div class="panel-body">
      <%= simple_form_for [@job, @resume] do |f| %>
        <%= f.input :content, :label => "应聘简介"%>
        <%= f.input :attachment, :label => "增加简历" %>
        <%= f.submit "送出", :class => "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
